{% if id %}
    <script src="https://www.googletagmanager.com/gtag/js?id={{ id }}" async></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }

        gtag('js', new Date);
        gtag('config', {{ id|json_encode|raw }});
    </script>
{% endif %}

{% block collection_widget %}
    {% from _self import collection_entry %}
    {% set attr = {class: "#{class_name(attr.class ?? '')} collection"} + attr + {'data-component-collection': []} %}

    {% if restore_order|default(false) %}
        {% set attr = {'data-component-collection': attr['data-component-collection'] + {preserve_names: true}} + attr %}
    {% endif %}

    <div {{ block('widget_container_attributes') }}>
        {% if prototype is defined %}
            {% if prototype.vars.compound %}
                <div class="collection__header">
                    {% for child in prototype %}
                        {% set type = child.vars.block_prefixes[child.vars.block_prefixes|length - 2] %}

                        {% if type != 'hidden' and (type != 'scalar_object' or child.value.vars.block_prefixes[child.value.vars.block_prefixes|length - 2] != 'hidden') %}
                            {% set label = form_label(child) %}

                            {% if label matches '~\\sclass\\s*=\\s*["\'](?:[^"\']*\\s+)?form-group(?:\\s+[^"\']*)?["\']~' %}
                                {{ label|raw }}
                            {% else %}
                                <div class="form-group">{{ label|raw }}</div>
                            {% endif %}
                        {% endif %}
                    {% endfor %}

                    <span class="collection-actions"></span>
                </div>
            {% endif %}

            <div
                class="collection__body"
                data-prototype="{{ collection_entry(prototype)|e('html_attr') }}"
                data-prototype-name="{{ prototype.vars.name }}"
                data-allow-add="{{ allow_add }}"
                data-allow-remove="{{ allow_delete }}"
                data-name-prefix="{{ full_name }}"
            >
                {% for child in form %}
                    {{ collection_entry(child) }}
                {% endfor %}
            </div>
        {% endif %}

        {{ form_rest(form) }}
    </div>
{% endblock %}

{% macro collection_entry(form) %}
    <div {{ form.vars.compound ? form_widget_attributes(form, {attr: {class: "collection__entry #{form.vars.attr.class ?? ''}"}}) : 'class="collection__entry"' }}>
        {% if form.vars.compound %}
            {% for child in form %}
                {{ form_row(child) }}
            {% endfor %}
        {% else %}
            {{ form_row(form) }}
        {% endif %}

        <div class="collection-actions">
            <a href="#" class="collection-remove"></a>
            <a href="#" class="collection-move"></a>
            <a href="#" class="collection-add"></a>
        </div>
    </div>
{% endmacro %}
